# Production Environment Configuration
# Copy this file to .env.prod and fill in actual values
# NEVER commit .env.prod to version control

# Docker Registry Configuration
REGISTRY=ghcr.io
IMAGE_NAME_BACKEND=your-username/task-manager/backend
IMAGE_NAME_FRONTEND=your-username/task-manager/frontend
IMAGE_TAG=latest

# Backend Configuration
SECRET_KEY=your-secret-key-here-min-32-chars
DEBUG=false

# Database Configuration
POSTGRES_USER=taskmanager_user
POSTGRES_PASSWORD=secure-database-password
POSTGRES_DB=taskmanager
DATABASE_URL=postgresql://taskmanager_user:secure-database-password@db:5432/taskmanager

# Frontend Configuration
NEXT_PUBLIC_API_URL=https://your-domain.com/api
NODE_ENV=production

# Domain & SSL Configuration
DOMAIN=your-domain.com
EMAIL=your-email@example.com

# Optional: GitHub Container Registry Authentication (for private images)
# GITHUB_TOKEN=ghp_your_personal_access_token
# GITHUB_ACTOR=your-github-username
